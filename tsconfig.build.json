{
  "compilerOptions": {
    "outDir": "./public", // Diretório de saída onde os arquivos compilados vão
    "module": "commonjs", // Módulo utilizado para a compilação
    "target": "ES2020", // Target JavaScript version
    "strict": true, // Ativar todas as opções de verificação de tipo estritas
    "esModuleInterop": true, // Suporte para import/export
    "skipLibCheck": true, // Ignora checagem de tipos de arquivos de biblioteca
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, // Gera arquivos de mapa de origem (.map)
    "declaration": true // Gera arquivos .d.ts
  },
  "include": [
    "src/server/**/*.ts" // Inclui todos os arquivos .ts dentro de src/server
  ],
  "exclude": [
    "node_modules", // Exclui node_modules
    "**/*.spec.ts" // Exclui arquivos de teste
  ]
}
